  <script>
    function register() {
        if (document.getElementsByName("performance")[0].value != "" &&
            document.getElementsByName("first_name")[0].value != "" &&
            document.getElementsByName("last_name")[0].value != "" &&
            document.getElementsByName("student_id")[0].value != "" &&
            document.getElementsByName("skill")[0].value != "" &&
            document.getElementsByName("instrument")[0].value != "" &&
            document.getElementsByName("location")[0].value != "" &&
            document.getElementsByName("room")[0].value != "") {

            var array = [];
            array[0] = document.getElementsByName('first_name')[0].value;
            array[0] = array[1] + ' ' + document.getElementsByName('last_name')[0].value;
            array[1] = document.getElementsByName('performance')[0].value;
            array[2] = document.getElementsByName('instrument')[0].value;
            array[3] = document.getElementsByName('time_slot')[0].value;

            var table = document.getElementById('table');
            var tbody = document.createElement('tbody');
            var tr = document.createElement('tr');

            for (var i = 0; i < 4; i++) {
                var value = array[i];
                var td = document.createElement('td');
                var tdText = document.createTextNode('' + value);
                td.appendChild(tdText);
                tr.appendChild(td);
            }
            tbody.appendChild(tr);
            table.appendChild(tbody);
        }
    }

    function duet() {
      if (document.getElementsByName("performance")[0].value == "duet") {
            document.getElementsByName("first_name2").hidden = false;
            document.getElementsByName("last_name2").hidden = false;
            document.getElementsByName("student_id2").hidden = false;
        }
    }
  </script>
  <body>
    <h1 style="text-align: center; font-family: helvetica; color: darkBlue"><strong>- Piano \
Competition -</strong></h1>
    <form>
    <div>
      <table class="homeworkTable" align="center">
        <tbody>
          <tr>
            <td>Performance Type</td>
            <td><input type="text" name="performance" onselect="duet()"></td>
          </tr>

          <tr>
            <td>First Name</td>
            <td><input type="text" name="first_name"></td>
          </tr>
